@model List<Appointment>
<h1>Delete Appointment</h1>
<div class="row">
    <form method="post" class="col s12">

        <div class="row">
            <div class="input-field col s3">
                <input id="id" name="id" type="number" class="validate">
                <label for="id">ID Appointment to delete</label>
            </div>
        </div>

        <button type="submit" class="waves-effect waves-light btn">Delete</button>
    </form>
    <table style="color: #fff" class="highlight">
    <thead>
        <tr>
            <th>Title</th>
            <th>Appointment ID</th>
            <th>Client ID</th>
            <th>Employee ID</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Title</td>
                <td>@appointment.IdAppointment</td>
                <td>@appointment.IdClient</td>
                <td>@appointment.IdEmployee</td>
                <td>@appointment.Date</td>
            </tr>
        }
    </tbody>
    </table>
</div>
