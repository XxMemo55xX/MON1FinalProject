@model List<Appointment>

<h1>Appointments</h1>
<div class="row">
    <a href="/appointments/createappointment" class="waves-effect waves-light btn">Add appointment</a>
    <a href="/appointments/deleteappointment" class="waves-effect waves-light btn">Delete appointment</a>
    <a href="/home/index" class="waves-effect waves-light btn">Return to home page</a>
</div>

<table style="color: #fff" class="highlight">
    <thead>
        <tr>
            <th>Title</th>
            <th>Appointment ID</th>
            <th>Client ID</th>
            <th>Employee ID</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var appointment in Model)
        {
            <tr>
                <td>@appointment.Title</td>
                <td>@appointment.IdAppointment</td>
                <td>@appointment.IdClient</td>
                <td>@appointment.IdEmployee</td>
                <td>@appointment.Date</td>
            </tr>
        }
    </tbody>
</table>